<div class="form-group" style="border:0px solid black; overflow:hidden">
  <%= f.label :Task %>
  <%= f.text_field :name, calss: "form-control" %>
  <%= f.label :Instruction %>
  <%= f.text_area :description, class: "form-control" %>
  <div class="container-fluid">
    <%= f.label :status %>
    <div class="row">
      <div class="col-md-1"> 
        <%= f.label :status, t(:label, label: "Start"), 
                    value: true, checked: true %>
      </div>
      <div class="col-md-1"> 
        <%= f.radio_button :status, t(:label, label: "Start") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <%= f.label :status, t(:label, label: "Finish"), value: false %>
      </div>
      <div class="col-md-1">
        <%= f.radio_button :status, t(:label, label: "Finish") %>
      </div>
    </div>
  </div>
  <div style="float: right;">
    <%= link_to_remove_fields t("supervisor.link.remove_task"), f %>
  </div>
</div>
